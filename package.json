{
  "name": "changsha-house-backend",
  "version": "1.0.0",
  "description": "长沙楼市查询平台 - 基于 Koa2 的高性能后端服务，集成数据爬虫、Redis缓存、ELK监控的全栈解决方案",
  "main": "src/main.js",
  "keywords": [
    "koa",
    "nodejs",
    "房产查询",
    "数据爬虫",
    "elasticsearch",
    "redis",
    "mysql",
    "微信公众号",
    "rest-api",
    "real-estate"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development PORT=8899 nodemon ./src/main",
    "prod": "pm2 start ./pm2.json",
    "stop": "pm2 stop ./pm2.json",
    "restart": "pm2 restart ./pm2.json",
    "reload": "pm2 reload ./pm2.json",
    "logs": "pm2 logs app",
    "lint": "prettier --ignore-path .gitignore --check .",
    "format": "prettier --ignore-path .gitignore --write .",
    "init:es": "node ./src/scripts/initEsIndex.js",
    "crawl": "node ./src/scripts/houseMain.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yu1596882018/changsha-house-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yu1596882018/changsha-house-backend/issues"
  },
  "homepage": "https://github.com/yu1596882018/changsha-house-backend#readme",
  "author": {
    "name": "yu1596882018",
    "email": "1596882018@qq.com",
    "url": "https://github.com/yu1596882018"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "@yu1596882018/server-sdk": "^1.0.3",
    "bcryptjs": "^2.4.3",
    "elasticsearch": "^16.5.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "koa-sslify": "^4.0.3",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "log4js": "^4.3.1",
    "moment": "^2.24.0",
    "mysql2": "^1.6.4",
    "prettier": "^2.2.1",
    "redis": "^2.8.0",
    "request-promise": "^4.2.6",
    "sequelize": "^5.21.2",
    "useragent": "^2.3.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^5.2.0",
    "koa-json": "^2.0.2",
    "nodemon": "^1.19.1",
    "request": "^2.88.2"
  },
  "nodemonConfig": {
    "ignore": [
      "scripts/*",
      "data/*"
    ],
    "delay": "2500"
  }
}
